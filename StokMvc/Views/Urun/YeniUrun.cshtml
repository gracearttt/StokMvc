@model StokMvc.Models.Entity.tblurunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">


    <h2>Yeni Ürün Ekleme</h2>
    <br />
    <label>Ürün Adını Giriniz...</label>
    @Html.TextBoxFor(x => x.ad, new { @class = "form-control" }) <br />
    <br />
    <label>Marka Adını Giriniz...</label>
    @Html.TextBoxFor(x => x.marka, new { @class = "form-control" }) <br />
    <br />
    <label>Stok Miktarını Giriniz...</label>
    @Html.TextBoxFor(x => x.stok, new { @class = "form-control" }) <br />
    <br />
    <label>Alış Fyatını Giriniz...</label>
    @Html.TextBoxFor(x => x.alisfiyat, new { @class = "form-control" }) <br />
    <br />
    <label>Satış Fyatını Giriniz...</label>
    @Html.TextBoxFor(x => x.satisfiyat, new { @class = "form-control" }) <br />
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x => x.tblkategori.id,(List<SelectListItem>)ViewBag.drop,new { @class="form-control"}) <br />

    <button class="btn btn-info">Kaydet</button>

</form>

