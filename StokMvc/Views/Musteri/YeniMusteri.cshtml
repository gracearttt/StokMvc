@model StokMvc.Models.Entity.tblmusteri
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">


    <h2>Yeni Müşteri Ekleme</h2>
    <br />
    <label>Müşteri Adını Giriniz...</label>
    @Html.TextBoxFor(x => x.ad, new { @class = "form-control" }) <br />
    <br />
    <label>Müşteri Soyadını Giriniz...</label>
    @Html.TextBoxFor(x => x.soyad, new { @class = "form-control" }) <br />
    <br />
    <label>Şehir Giriniz...</label>
    @Html.TextBoxFor(x => x.sehir, new { @class = "form-control" }) <br />
    <br />
    <label>Bakiye Giriniz...</label>
    @Html.TextBoxFor(x => x.bakiye, new { @class = "form-control" }) <br />
    <br />
   
    <button class="btn btn-info">Kaydet</button>

</form>

